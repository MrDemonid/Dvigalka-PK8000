GAME: DO;

$CODE

/* формируем переход на начало кода */
declare JUMP byte data(0C3h);
declare JADR address data(.MYENTRY-3); /* with stack initialize */


$INCLUDE(:F0:VIDEO2.EXT)
$INCLUDE(:F0:VECTOR.EXT)
